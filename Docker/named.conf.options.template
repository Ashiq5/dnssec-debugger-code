include "${BIND_DIR}/rndc.key";  # Use the rndc.key for bind2

controls {
    inet 127.0.0.1 port ${BIND_RNDC_PORT} allow { 127.0.0.1; } keys { rndc-key; };
};


options {
    directory "${BIND_DIR}";  # Will be replaced dynamically

    listen-on { ${BIND_IP}; };  # Will be replaced dynamically

    listen-on-v6 { none; };

    allow-query { any; };

    recursion no;

    dnssec-validation no;

    // Optional logging
    // querylog yes;
};
